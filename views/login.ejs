<div class="d-flex flex-column vh-100">
  <div class="col-md-12 text-center">
    <img src="/assets/image1.jpg" alt="" width="30%" height="30%"/>
    <br>
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Sign in</h4>
      </div>
      <div class="form-header">
        <% if (Object.keys(errors).length === 0) { %>
        <% } else { %>
          <% Object.values(errors).forEach(error => { %>
            <% if (error.code === 'auth/user-not-found') { %>
              <div class="modal-header text-center">
                <h6 class="errors-heading text-danger w-100 font-weight-bold">Invalid credentials. User does not exist</h6>
              </div>
            <% } else { %>
              <% if (Object.values(errors).indexOf(error) === 0) { %>
                <div class="modal-header text-center">
                  <h6 class="errors-heading text-danger w-100 font-weight-bold">Please correct the following before continuing</h6>
                </div>
              <% } %>
            <% } %>
          <% }) %>
        <% } %>
      </div>

      <div class="modal-body mx-3">
        <form action="/login" class="validated-form" method="POST" novalidate>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="md-form mb-5">
            <i class="fas fa-envelope prefix grey-text"></i>
            <label class="form-label font-weight-bold" for="email">Email</label>
            <input class="form-control text-center <% if (errors.email) { %> is-invalid <% } %>" type="email" name="email" id="email" value="<%= data.email %>" required>
          </div>
  
          <div class="md-form mb-4">
            <i class="fas fa-lock prefix grey-text"></i>
            <label class="form-label font-weight-bold" for="password">Password</label>
              <input class="form-control text-center <% if (errors.password) { %> is-invalid <% } %>" type="password" name="password" id="password" value="<%= data.password %>" required>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button type="submit" class="btn btn-info">Login</button>
          </div>
        </form>
    </div>
  </div>
</div>